<?xml version="1.0" encoding="UTF-8"?>

<table sqlname="mplat_exam_item" ticket="true">
    
	<!-- ========================================== -->
	<!-- 数据表操作 -->
	<!-- ========================================== -->
    <operation name="insert" paramtype="object">
		<description>新增记录</description>
		<sql>
			INSERT INTO mplat_exam_item(id, no, exm_id, text) VALUES(?, ?, ?, ?)
		</sql>
	</operation>
    
	<operation name="find" multiplicity="one">
		<description>查询单条记录</description>
		<sql>
			SELECT * FROM mplat_exam_item WHERE id=?
		</sql>
	</operation>
    
    <operation name="findAll" multiplicity="many">
		<description>查询所有记录</description>
		<sql>
			SELECT * FROM mplat_exam_item
		</sql>
	</operation>
    
    <operation name="findByExam" multiplicity="many">
		<description>查询记录</description>
		<sql>
			SELECT * FROM mplat_exam_item WHERE exm_id=?
		</sql>
	</operation>

	<operation name="update" paramtype="object">
		<description>更新信息</description>
		<sql>
			UPDATE mplat_exam_item SET no=?, exm_id=?, text=? WHERE id=?
		</sql>
	</operation>
    
    <operation name="delete">
		<description>删除信息</description>
		<sql>
			DELETE FROM mplat_exam_item WHERE id=?
		</sql>
	</operation>
    
    <operation name="deleteByExam">
		<description>删除信息</description>
		<sql>
			DELETE FROM mplat_exam_item WHERE exm_id=?
		</sql>
	</operation>

</table>
