<?xml version="1.0" encoding="UTF-8"?>

<table sqlname="mplat_exam_info" ticket="true">
    
	<!-- ========================================== -->
	<!-- 数据表操作 -->
	<!-- ========================================== -->
    <operation name="insert" paramtype="object">
		<description>新增记录</description>
		<sql>
			INSERT INTO mplat_exam_info(id, title, rgt_no) VALUES(?, ?, ?)
		</sql>
	</operation>
    
	<operation name="find" multiplicity="one">
		<description>查询单条记录</description>
		<sql>
			SELECT * FROM mplat_exam_info WHERE id=?
		</sql>
	</operation>
    
    <operation name="findAll" multiplicity="many">
		<description>查询所有记录</description>
		<sql>
			SELECT * FROM mplat_exam_info
		</sql>
	</operation>

	<operation name="update" paramtype="object">
		<description>更新信息</description>
		<sql>
			UPDATE mplat_exam_info SET title=?, rgt_no=? WHERE id=?
		</sql>
	</operation>
    
    <operation name="delete">
		<description>删除信息</description>
		<sql>
			DELETE FROM mplat_exam_info WHERE id=?
		</sql>
	</operation>

</table>
