<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	<entry key="app.name">mplat</entry>
	
	<!-- ================================ -->
	<!-- 字符编码 -->
	<!-- ================================ -->
	<entry key="input.encoding">UTF-8</entry>
	<entry key="output.encoding">UTF-8</entry>
	
	<!-- ================================ -->
	<!-- JDBC配置 -->
	<!-- ================================ -->
	<entry key="jdbc.driver">com.mysql.jdbc.Driver</entry>
	<entry key="jdbc.url">jdbc:mysql://127.0.0.1:3306/mplat?useUnicode=true&amp;characterEncoding=UTF8</entry>
	<entry key="jdbc.user">mplat</entry>
	<entry key="jdbc.passwd">mplat</entry>
	
</properties>
